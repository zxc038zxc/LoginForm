<UserControl x:Class="LoginFormWPF.CustomControl.BindablePwdBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginFormWPF.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="150">
    <PasswordBox x:Name="TxtPwdBox"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="Black"
                             CaretBrush="LightGray"
                             BorderThickness="0,0,0,1"
                             VerticalContentAlignment="Bottom"
                             Padding="20,0,0,0">
        <PasswordBox.Background>
            <!--如果使用自定義UserControl，要添加外部資源時(例如圖像)，必須設置更準確的路徑-->
            <!--所以這邊設置它引用的程序集名稱，指定引用程序集-->
            <ImageBrush ImageSource="/LoginFormWPF;component/Image/key-icon.png" Stretch="None" AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
